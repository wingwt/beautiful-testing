<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        default-menu-include="false" standalone="true">

    <parameter name="id"/>

    <transition name="addPageBlock">
        <actions>
            <service-call name="moqui.h5Management.H5ManagementServices.edit#PageBlock" in-map="context" out-map="context"/>
        </actions>
        <default-response url="../PageBlockWhiteList"></default-response>
    </transition>

    <actions>
        <entity-find-one entity-name="mantle.mfexcel.h5page.PageBlock" value-field="pageBlock"/>
    </actions>

    <widgets>
        <form-single name="AddPageBlockForm" transition="addPageBlock" map="pageBlock">
            <field name="blockId">
                <default-field>
                    <hidden/>
                </default-field>
            </field>
            <field name="name">
                <default-field title="区块名称">
                    <text-line validate="required" maxlength="40"/>
                </default-field>
            </field>
            <field name="blockKey">
                <default-field title="区块唯一标识">
                    <text-line validate="required" maxlength="40"/>
                </default-field>
            </field>
            <field name="submitButton">
                <default-field title="保存">
                    <submit/>
                </default-field>
            </field>
        </form-single>
    </widgets>
</screen>
