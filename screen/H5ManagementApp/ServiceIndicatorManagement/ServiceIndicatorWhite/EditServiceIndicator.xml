<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        default-menu-include="false" standalone="true">

    <parameter name="indicatorId"/>

    <transition-include name="getBizServiceDataJson" location="component://H5-service-management/template/PageBlockInfo.xml"/>

    <transition name="addBSIndicator">
        <actions>
            <service-call name="moqui.h5Management.H5ManagementServices.edit#BizServiceIndicator" in-map="context" out-map="context"/>
        </actions>
        <default-response url="../ServiceIndicatorWhiteList"></default-response>
    </transition>

    <actions>
        <entity-find-one entity-name="mantle.mfexcel.h5page.BizServiceIndicator" value-field="bSIndicator"/>
    </actions>

    <widgets>
        <form-single name="AddBSIndicatorForm" transition="addBSIndicator" map="bSIndicator">
            <field name="indicatorId">
                <default-field>
                    <hidden/>
                </default-field>
            </field>
            <field name="indicatorName">
                <default-field title="服务标识名称">
                    <text-line maxlength="40" validate="required" validate-msg="服务标识名称为必填"/>
                </default-field>
            </field>
            <field name="indicatorDesc">
                <default-field title="服务标识描述">
                    <text-line maxlength="255" validate="required" validate-msg="服务标识描述为必填"/>
                </default-field>
            </field>
            <field name="serviceId">
                <default-field title="选择服务url">
                    <drop-table validate="required" validate-msg="服务url为必填" placeholder="请选择" value-field="name" search-field="searchField"
                                key-field="serviceId" transition="getBizServiceDataJson" search-params="{'phaseStatusId':'VtAlpha'}" column="[{title:'服务编码',data:'pseudoId'},{title:'服务名称',data:'name'},{title:'服务url/下载链接',data:'url'},{title:'app包名',data:'appPackage'},{title:'资源类型',data:'serviceDataTypeEnumId'}]"
                                page-size="20" pagination="true"/>
                </default-field>
            </field>
            <field name="submitButton">
                <default-field title="保存">
                    <submit/>
                </default-field>
            </field>
        </form-single>
    </widgets>
</screen>
