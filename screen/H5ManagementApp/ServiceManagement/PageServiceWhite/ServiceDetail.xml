<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        default-menu-include="false" standalone="true">

    <parameter name="serviceId" required="true"/>
    <actions>
        <entity-find-one entity-name="mantle.mfexcel.h5page.BizServiceList" value-field="bizService">
            <field-map field-name="serviceId"/>
        </entity-find-one>
        <entity-find-one entity-name="mantle.mfexcel.old.TbPublicMainRelease" value-field="publicMainRelease">
            <field-map field-name="id" from="bizService.vendorPartyId"/>
            <select-field field-name="id,pubName"/>
        </entity-find-one>
        <if condition="publicMainRelease">
            <set field="pubName" from="publicMainRelease.pubName"/>
        </if>
    </actions>

    <widgets>bizService
        <container-row>
            <row-col lg="12">
                <form-single name="BizService" map="bizService">
                    <field name="pseudoId">
                        <default-field title="服务编码">
                            <display/>
                        </default-field>
                    </field>
                    <field name="name">
                        <default-field title="服务名称">
                            <display/>
                        </default-field>
                    </field>
                    <field name="industry">
                        <default-field title="服务行业">
                            <display/>
                        </default-field>
                    </field>
                    <field name="serviceType">
                        <default-field title="服务类别">
                            <display/>
                        </default-field>
                    </field>
                    <field name="pubName">
                        <default-field title="服务提供商">
                            <display/>
                        </default-field>
                    </field>
                    <field name="cooperationType">
                        <default-field title="合作类型">
                            <display/>
                        </default-field>
                    </field>
                    <field name="businessType">
                        <default-field title="商业类型">
                            <display/>
                        </default-field>
                    </field>
                    <field name="settlementMethod">
                        <default-field title="结算方式">
                            <display/>
                        </default-field>
                    </field>
                    <field name="settlementOrder">
                        <default-field title="结算报价">
                            <display/>
                        </default-field>
                    </field>
                    <field name="marketingType">
                        <default-field title="营销类型">
                            <display/>
                        </default-field>
                    </field>
                    <field name="remark">
                        <default-field title="备注">
                            <display/>
                        </default-field>
                    </field>
                    <field name="url">
                        <conditional-field condition="serviceDataTypeEnumId == 'APP'" title="默认下载链接">
                            <display/>
                        </conditional-field>
                        <default-field title="服务url">
                            <display/>
                        </default-field>
                    </field>
                    <field name="appPackage">
                        <default-field title="App包名">
                            <display/>
                        </default-field>
                    </field>
                    <field-layout>
                        <field-ref name="pseudoId"/>
                        <field-ref name="name"/>
                        <field-ref name="industry"/>
                        <field-ref name="serviceType"/>
                        <field-ref name="pubName"/>
                        <field-ref name="cooperationType"/>
                        <field-ref name="businessType"/>
                        <field-ref name="settlementMethod"/>
                        <field-ref name="settlementOrder"/>
                        <field-ref name="marketingType"/>
                        <field-ref name="remark"/>
                        <field-tabs id="type" type="card" size="small">
                            <field-tab-pane label="APP" name="serviceAppPane"
                                            condition="serviceDataTypeEnumId == 'APP'">
                                <field-ref name="appPackage"/>
                                <field-ref name="url"/>
                            </field-tab-pane>
                            <field-tab-pane label="URL" name="serviceUrlPane" condition="serviceDataTypeEnumId == 'URL'">
                                    <field-ref name="url"/>
                            </field-tab-pane>
                        </field-tabs>
                    </field-layout>
                </form-single>
            </row-col>
            <row-col lg="12">
                <container-box>
                    <box-header>
                        <label text="配置参数"/>
                    </box-header>
                    <box-body>
                        <form-list name="ServiceParam" list="serviceParam" use-widget="aggrid">
                            <entity-find entity-name="mantle.mfexcel.h5page.BizServiceParamList" list="paramApps">
                                <search-form-inputs/>
                                <econdition field-name="serviceId"></econdition>
                                <order-by field-name="-createdStamp"/>
                            </entity-find>
                            <field name="paramName">
                                <header-field title="参数名称">
                                </header-field>
                                <default-field>
                                    <display/>
                                </default-field>
                            </field>
                            <field name="enumCode">
                                <header-field title="参数key">
                                </header-field>
                                <default-field>
                                    <display/>
                                </default-field>
                            </field>
                            <field name="defaultValue">
                                <header-field title="默认值">
                                </header-field>
                                <default-field>
                                    <display/>
                                </default-field>
                            </field>
                        </form-list>
                    </box-body>
                </container-box>
                <container-box>
                    <box-header>
                        <label text="页面区块"/>
                    </box-header>
                    <box-body>
                        <form-list name="ServiceBlock" list="serviceBlock" use-widget="aggrid">
                            <entity-find entity-name="mantle.mfexcel.h5page.BizServiceBlockList" list="bsbl">
                                <search-form-inputs/>
                                <econdition field-name="serviceId"></econdition>
                                <econdition field-name="thruDate" operator="is-null"/>
                                <order-by field-name="-createdStamp"/>
                            </entity-find>
                            <field name="blockName">
                                <header-field title="区块名称">
                                </header-field>
                                <default-field>
                                    <display/>
                                </default-field>
                            </field>
                            <field name="blockKey">
                                <header-field title="区块唯一标识">
                                </header-field>
                                <default-field>
                                    <display/>
                                </default-field>
                            </field>
                            <field name="serviceNames">
                                <header-field title="区块服务">
                                </header-field>
                                <default-field>
                                    <display/>
                                </default-field>
                            </field>
                        </form-list>
                    </box-body>
                </container-box>
            </row-col>
        </container-row>
    </widgets>
</screen>
