<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        default-menu-title="白名单" default-menu-index="1">

    <transition name="getBizService">
        <default-response url="../ServiceDetail"></default-response>
    </transition>
    <transition name="editorService">
        <default-response url="../EditorService"></default-response>
    </transition>
    <transition name="addService">
        <default-response url="../AddService"></default-response>
    </transition>

    <transition name="multiDisablePageService">
        <actions>
            <set field="bizServiceIdList" from="context._requestBodyJsonList.serviceId as List"/>
            <service-call name="moqui.h5Management.H5ManagementServices.multiDisable#BizService"
                          in-map="[bizServiceIdList:bizServiceIdList]"/>
        </actions>
        <default-response type="."></default-response>
    </transition>
    <transition name="allDisablePageService">
        <actions>
            <service-call name="moqui.h5Management.H5ManagementServices.allDisable#BizService"/>
        </actions>
        <default-response type="."></default-response>
    </transition>

    <transition name="enableService">
        <actions>
        <service-call name="update#mantle.mfexcel.h5page.BizService"
                      in-map="[serviceId:serviceId,enabled:'Y',isIssued:'N']"
                      out-map="context"/>
        <service-call name="moqui.h5Management.H5ManagementServices.updateService#BizService" in-map="[serviceId:serviceId]"/>
        </actions>
        <default-response type="."></default-response>
    </transition>

    <transition name="disableService">
        <actions>
        <service-call name="update#mantle.mfexcel.h5page.BizService"
                      in-map="[serviceId:serviceId,enabled:'N',isIssued:'N']"
                      out-map="context"/>
        <service-call name="moqui.h5Management.H5ManagementServices.updateService#BizService" in-map="[serviceId:serviceId]"/>
        </actions>
        <default-response type="."></default-response>
    </transition>

    <transition name="issuedService">
        <actions>
            <service-call name="moqui.h5Management.H5ManagementServices.issued#BizService"
                          in-map="[serviceId:serviceId]"  out-map="context"/>
        </actions>
        <default-response type="."></default-response>
    </transition>

    <transition name="multiIssuedPageService">
        <actions>
            <set field="bizServiceIdList" from="context._requestBodyJsonList.serviceId as List"/>
            <service-call name="moqui.h5Management.H5ManagementServices.multiIssued#BizService"
                          in-map="[bizServiceIdList:bizServiceIdList]"/>
        </actions>
        <default-response type="."></default-response>
    </transition>

    <transition name="allIssuedPageService">
        <actions>
            <service-call name="moqui.h5Management.H5ManagementServices.allIssued#BizService"/>
        </actions>
        <default-response type="."></default-response>
    </transition>

    <widgets>
        <toolbar-col>
            <dynamic-dialog id="addBizService" button-text="新增" type="success" transition="addService"/>

            <button-group vertical="true">
                <link url="multiIssuedPageService" text="批量发布" target-list="PageServiceWhiteList"
                      confirmation="您确定发布该批数据吗？"/>
            </button-group>

            <button-group vertical="true">
                <link url="allIssuedPageService" text="全部发布" confirmation="您确定发布全部数据吗？"/>
            </button-group>

            <button-group vertical="true">
                <link url="multiDisablePageService" text="批量停用" confirmation="您确定停用该批数据吗？"
                      target-list="PageServiceWhiteList"/>
            </button-group>

            <button-group vertical="true">
                <link url="allDisablePageService" text="全部停用" confirmation="您确定停用全部数据吗？"/>
            </button-group>
        </toolbar-col>
        <form-list name="PageServiceWhiteList" list="serviceWhiteList" use-widget="aggrid" multi="true" auto-stretch="true">
            <entity-find entity-name="mantle.mfexcel.h5page.BizServiceList" list="bizServiceWhiteList">
                <search-form-inputs default-order-by="-lastUpdatedStamp"/>
                <econdition field-name="phaseStatusId" value="VtAlpha"></econdition>
                <econdition field-name="thruDate" operator="is-null"/>
                <select-field field-name="vendorPartyId"/>
            </entity-find>
            <row-actions>
                <if condition="enabled == 'Y'">
                    <set field="enabledCN" value="启用"/>
                    <set field="enabledCond" from="false"/>
                    <set field="disabledCond" from="true"/>
                    <else>
                        <set field="enabledCN" value="停用"/>
                        <set field="enabledCond" from="true"/>
                        <set field="disabledCond" from="false"/>
                    </else>
                </if>
                <if condition="isIssued == 'Y'">
                    <set field="isIssuedCN" value="发布"/>
                    <set field="issuedCondition" from="true"/>
                    <set field="unIssuedCondition" from="false"/>
                    <else>
                        <set field="isIssuedCN" value="未发布"/>
                        <set field="issuedCondition" from="false"/>
                        <set field="unIssuedCondition" from="true"/>
                    </else>
                </if>
                <!--VENDOR_PARTY_ID  vendorPartyId-->
                    <log message="vendorPartyId ${vendorPartyId}"/>
                    <entity-find-one entity-name="mantle.mfexcel.old.TbPublicMainRelease" value-field="publicMainRelease">
                        <field-map field-name="id" from="vendorPartyId"/>
                        <select-field field-name="id,pubName"/>
                    </entity-find-one>
                    <log message="TbPublicMainRelease ${publicMainRelease}"/>
                    <if condition="publicMainRelease">
                        <set field="vendorPartyId" from="publicMainRelease.id  + '，' + publicMainRelease.pubName"/>
                    </if>
            </row-actions>
            <field name="tableIndex" from="serviceWhiteList_index+1" show-checkbox="true" width="120">
                <default-field title="序号">
                    <display/>
                </default-field>
            </field>
            <field name="serviceId">
                <default-field>
                    <hidden/>
                </default-field>
            </field>
            <field name="pseudoId">
                <header-field title="服务编码">
                    <text-find size="10" hide-options="true"/>
                </header-field>
                <default-field>
                    <display/>
                </default-field>
            </field>
            <field name="name">
                <header-field title="服务名称">
                    <text-find size="10" hide-options="true"/>
                </header-field>
                <default-field>
                    <display/>
                </default-field>
            </field>
            <field name="vendorPartyId">
                <header-field title="服务提供商" show-order-by="true">
                    <text-find size="10" hide-options="true"/>
                </header-field>
                <default-field>
                    <display/>
                </default-field>
            </field>
            <field name="cooperationType">
                <header-field title="合作类型" show-order-by="true">
                    <drop-down allow-empty="true">
                        <entity-options key="${description}" text="${description}">
                            <entity-find entity-name="moqui.basic.Enumeration">
                                <econdition field-name="enumTypeId" value="CooperationType"/>
                            </entity-find>
                        </entity-options>
                    </drop-down>
                </header-field>
                <default-field>
                    <display/>
                </default-field>
            </field>
            <field name="industry">
                <header-field title="服务行业" show-order-by="true">
                    <drop-down allow-empty="true">
                        <entity-options key="${description}" text="${description}">
                            <entity-find entity-name="moqui.basic.Enumeration">
                                <econdition field-name="enumTypeId" value="Industry"/>
                            </entity-find>
                        </entity-options>
                    </drop-down>
                </header-field>
                <default-field>
                    <display/>
                </default-field>
            </field>
            <field name="serviceType">
                <header-field title="服务类别" show-order-by="true">
                    <drop-down allow-empty="true">
                        <entity-options key="${description}" text="${description}">
                            <entity-find entity-name="moqui.basic.Enumeration">
                                <econdition field-name="enumTypeId" value="ServiceType"/>
                            </entity-find>
                        </entity-options>
                    </drop-down>
                </header-field>
                <default-field>
                    <display/>
                </default-field>
            </field>
            <field name="url" width="200">
                <header-field title="服务url">
                    <text-find size="10" hide-options="true"/>
                </header-field>
                <default-field>
                    <display/>
                </default-field>
            </field>
            <field name="businessType">
                <header-field title="商业类型" show-order-by="true">
                    <drop-down allow-empty="true">
                        <entity-options key="${description}" text="${description}">
                            <entity-find entity-name="moqui.basic.Enumeration">
                                <econdition field-name="enumTypeId" value="BusinessType"/>
                            </entity-find>
                        </entity-options>
                    </drop-down>
                </header-field>
                <default-field>
                    <display/>
                </default-field>
            </field>
            <field name="settlementMethod">
                <header-field title="结算方式" show-order-by="true">
                    <drop-down allow-empty="true">
                        <entity-options key="${description}" text="${description}">
                            <entity-find entity-name="moqui.basic.Enumeration">
                                <econdition field-name="enumTypeId" value="SettlementMethod"/>
                            </entity-find>
                        </entity-options>
                    </drop-down>
                </header-field>
                <default-field>
                    <display/>
                </default-field>
            </field>
            <field name="settlementOrder">
                <header-field title="结算报价">
                    <text-find size="10" hide-options="true"/>
                </header-field>
                <default-field>
                    <display/>
                </default-field>
            </field>
            <field name="marketingType">
                <header-field title="营销类型" show-order-by="true">
                    <drop-down allow-empty="true">
                        <entity-options key="${description}" text="${description}">
                            <entity-find entity-name="moqui.basic.Enumeration">
                                <econdition field-name="enumTypeId" value="MarketingType"/>
                            </entity-find>
                        </entity-options>
                    </drop-down>
                </header-field>
                <default-field>
                    <display/>
                </default-field>
            </field>
            <field name="appPackage">
                <header-field title="App包名">
                    <text-find size="10" hide-options="true"/>
                </header-field>
                <default-field>
                    <display/>
                </default-field>
            </field>
            <field name="dataType">
                <header-field title="资源类型">
                    <text-find size="10" hide-options="true"/>
                </header-field>
                <default-field>
                    <display/>
                </default-field>
            </field>

            <field name="paramName">
                <header-field title="参数名称">
                    <text-find size="10" hide-options="true"/>
                </header-field>
                <default-field>
                    <display/>
                </default-field>
            </field>

            <field name="blockName">
                <header-field title="区块名称">
                    <text-find size="10" hide-options="true"/>
                </header-field>
                <default-field>
                    <display/>
                </default-field>
            </field>

            <field name="enabled">
                <header-field title="启用状态" show-order-by="case-insensitive">
                    <drop-down allow-empty="true">
                        <option key="Y" text="启用"/>
                        <option key="N" text="停用"/>
                    </drop-down>
                </header-field>
                <default-field>
                    <display text="${enabledCN}"/>
                </default-field>
            </field>
            <field name="isIssued">
                <header-field title="发布状态" show-order-by="case-insensitive">
                    <drop-down allow-empty="true">
                        <option key="Y" text="发布"/>
                        <option key="N" text="未发布"/>
                    </drop-down>
                </header-field>
                <default-field>
                    <display text="${isIssuedCN}"/>
                </default-field>
            </field>
            <field name="remark">
                <header-field title="备注">
                    <text-find size="10" hide-options="true"/>
                </header-field>
                <default-field>
                    <display/>
                </default-field>
            </field>
            <field name="createdStamp">
                <header-field>
                    <date-find format="yyyy-MM-dd HH:mm"/>
                </header-field>
                <default-field title="创建时间">
                    <display format="yyyy-MM-dd HH:mm:ss"/>
                </default-field>
            </field>
            <field name="createdUsername">
                <header-field title="创建人">
                    <text-find size="10" hide-options="true"/>
                </header-field>
                <default-field>
                    <display/>
                </default-field>
            </field>
            <field name="lastUpdatedStamp">
                <header-field>
                    <date-find format="yyyy-MM-dd HH:mm"/>
                </header-field>
                <default-field title="编辑时间">
                    <display format="yyyy-MM-dd HH:mm:ss"/>
                </default-field>
            </field>
            <field name="lastUpdatedUsername">
                <header-field title="编辑人">
                    <text-find size="10" hide-options="true"/>
                </header-field>
                <default-field>
                    <display/>
                </default-field>
            </field>
            <field name="operationButton" is-action-column="true" width="200">
                <header-field>
                    <reset/>
                </header-field>
                <default-field title="操作">
                    <link url="getBizService" text="查看" link-parameters="{'serviceId':'serviceId'}" btn-type="info"/>
                    <link url="editorService" text="编辑" link-parameters="{'serviceId':'serviceId'}" btn-type="primary"/>
                    <link url="enableService" link-parameters="{'serviceId':'serviceId'}" text="启用"
                          btn-type="success" confirmation="您确定启用该数据吗？" display-condition-field="enabledCond"/>
                    <link url="disableService" link-parameters="{'serviceId':'serviceId'}" text="停用" btn-type="danger"
                          confirmation="您确定停用该数据吗？" display-condition-field="disabledCond"/>
                    <link url="issuedService" text="发布" link-parameters="{'serviceId':'serviceId'}" btn-type="info"
                          confirmation="您确定发布该数据吗？" display-condition-field="unIssuedCondition"/>
                </default-field>
            </field>
        </form-list>
    </widgets>
</screen>
