<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        default-menu-include="false" standalone="true">

    <parameter name="serviceId" required="true"/>

    <transition name="updateService">
        <actions>
            <service-call name="moqui.h5Management.H5ManagementServices.update#BizService" in-map="context"/>
        </actions>
        <default-response url="."></default-response>
    </transition>

    <transition name="deleteBlock">
        <actions>
            <service-call name="delete#mantle.mfexcel.h5page.BizServiceBlockAppl" in-map="context"/>
            <service-call name="moqui.h5Management.H5ManagementServices.updateService#BizService" in-map="[serviceId:serviceId]"/>
        </actions>
        <default-response url="."></default-response>
    </transition>

    <transition name="addServiceParamSubmit">
        <actions>
            <service-call name="moqui.h5Management.H5ManagementServices.add#ServiceParam" in-map="context">
            </service-call>
        </actions>
        <default-response url="."></default-response>
    </transition>

    <transition name="addBlockSubmit">
        <actions>
            <service-call name="moqui.h5Management.H5ManagementServices.add#ServiceBlock" in-map="context">
            </service-call>
        </actions>
        <default-response url="."></default-response>
    </transition>

    <transition name="updateDefaultValue">
        <actions>
            <service-call name="moqui.h5Management.H5ManagementServices.update#ServiceParam" in-map="context"
                          out-map="context"/>
        </actions>
        <default-response url="."></default-response>
    </transition>
    <transition name="deleteParam">
        <actions>
            <service-call name="delete#mantle.mfexcel.h5page.BizServiceParamAppl" in-map="context"/>
            <service-call name="moqui.h5Management.H5ManagementServices.updateService#BizService" in-map="[serviceId:serviceId]"/>
        </actions>
        <default-response url="."></default-response>
    </transition>
    <transition name="getServiceType">
        <actions>
            <entity-find entity-name="moqui.basic.Enumeration" list="serviceTypeList">
                <econdition field-name="enumTypeId" value="ServiceType"/>
                <econdition field-name="relatedEnumId" from="industryEnumId"/>
                <econdition field-name="enabled" value="Y"/>
                <select-field field-name="enumId,description"/>
            </entity-find>
            <script>ec.web.sendJsonResponse(serviceTypeList)</script>
        </actions>
        <default-response></default-response>
    </transition>

    <transition name="getVendorPartyDataJson">
        <parameter name="pageNumber"/>
        <parameter name="pageSize"/>
        <parameter name="searchField"/>
        <parameter name="searchKey"/>
        <parameter name="searchValue"/>

        <actions>
            <if condition="!pageSize">
                <set field="pageSize" value="20"/>
            </if>
            <if condition="!pageNumber">
                <set field="pageNumber" value="1"/>
            </if>
            <if condition="searchKey">
                <then>
                    <entity-find-count entity-name="mantle.mfexcel.old.TbPublicMainRelease"
                                       count-field="publicMainReleaseCount" cache="true">
                        <econdition field-name="${searchKey}" operator="in" from="searchValue.split(',') as List"/>
                    </entity-find-count>
                    <entity-find entity-name="mantle.mfexcel.old.TbPublicMainRelease" list="publicMainReleaseLs"
                                 cache="true" limit="20" offset="(pageNumber-1)*pageSize">
                        <econdition field-name="${searchKey}" operator="in" from="searchValue.split(',') as List"/>
                        <order-by field-name="pubName"/>
                    </entity-find>
                </then>
                <else-if condition="searchField">
                    <entity-find-count entity-name="mantle.mfexcel.old.TbPublicMainRelease"
                                       count-field="publicMainReleaseCount" cache="true">
                        <econditions combine="or">
                            <econdition field-name="pubName" value="${'%'+searchField+'%'}" operator="like"/>
                            <econdition field-name="id" value="${'%'+searchField+'%'}" operator="like"/>
                        </econditions>
                    </entity-find-count>
                    <entity-find entity-name="mantle.mfexcel.old.TbPublicMainRelease" list="publicMainReleaseLs"
                                 cache="true" limit="20" offset="(pageNumber-1)*pageSize">
                        <econditions combine="or">
                            <econdition field-name="pubName" value="${'%'+searchField+'%'}" operator="like"/>
                            <econdition field-name="id" value="${'%'+searchField+'%'}" operator="like"/>
                        </econditions>
                        <order-by field-name="pubName"/>
                    </entity-find>
                </else-if>
                <else>
                    <entity-find-count entity-name="mantle.mfexcel.old.TbPublicMainRelease"
                                       count-field="publicMainReleaseCount" cache="true">
                    </entity-find-count>
                    <entity-find entity-name="mantle.mfexcel.old.TbPublicMainRelease" list="publicMainReleaseLs"
                                 cache="true" limit="20" offset="(pageNumber-1)*pageSize">
                        <order-by field-name="pubName"/>
                    </entity-find>
                </else>
            </if>

            <set field="showPubNameList" from="[]"/>
            <iterate list="publicMainReleaseLs" entry="pubNamePackage">
                <set field="showPubNameMap" from="[:]"/>
                <set field="showPubNameMap.id" from="pubNamePackage.id"/>
                <set field="showPubNameMap.pubName" from="pubNamePackage.pubName"/>
                <script>
                    showPubNameList.add(showPubNameMap)
                </script>
            </iterate>

            <set field="result"
                 from="['values':['gridResult':['totalRow':publicMainReleaseCount,'list':showPubNameList]]]"/>
            <script>
                ec.web.sendJsonResponse(result)
            </script>
        </actions>
        <default-response type="none"/>
    </transition>

    <actions>
        <entity-find-one entity-name="mantle.mfexcel.h5page.BizServiceList" value-field="bizService">
            <field-map field-name="serviceId"/>
        </entity-find-one>
        <if condition="bizService.serviceDataTypeEnumId == 'URL'">
            <set field="appUrl" value=""/>
            <set field="bizService.appPackage" value=""/>
        </if>
        <if condition="bizService.serviceDataTypeEnumId == 'APP'">
            <set field="appUrl" from="bizService.url" />
            <set field="bizService.url" value=""/>
        </if>

        <entity-find entity-name="mantle.mfexcel.h5page.BizServiceBlockList" list="blockList">
            <econdition field-name="serviceId"></econdition>
            <econdition field-name="thruDate" operator="is-null"/>
        </entity-find>
        <if condition="blockList">
            <set field="_blockIds" from="blockList.blockId"/>
        </if>

        <entity-find entity-name="mantle.mfexcel.h5page.PageBlockServiceAppl" list="blockServiceList">
            <econdition field-name="serviceId"></econdition>
        </entity-find>

        <if condition="blockServiceList">
            <set field="_blockServiceIds" from="blockServiceList.blockId"/>
        </if>

        <entity-find entity-name="mantle.mfexcel.h5page.BizServiceParamList" list="paramApps">
            <search-form-inputs/>
            <econdition field-name="serviceId"></econdition>
            <order-by field-name="-createdStamp"/>
        </entity-find>
        <if condition="paramApps">
            <set field="_paramEnumIds" from="paramApps.configParamEnumId"/>
        </if>
    </actions>

    <widgets>
        <container-row>
            <row-col lg="12">
                <form-single name="BizService" map="bizService" transition="updateService">
                    <field name="serviceDataTypeEnumId">
                        <default-field>
                            <hidden/>
                        </default-field>
                    </field>
                     <field name="serviceId">
                        <default-field>
                            <hidden/>
                        </default-field>
                    </field>
                    <field name="pseudoId">
                        <default-field title="服务编码">
                            <display/>
                        </default-field>
                    </field>
                    <field name="name">
                        <default-field title="服务名称">
                            <text-line validate="required" validate-msg="服务名称为必填" maxlength="40"/>
                        </default-field>
                    </field>
                    <field name="industryEnumId">
                        <default-field title="服务行业">
                            <drop-down allow-empty="true" validate="required" validate-msg="服务行业为必填" >
                                <entity-options key="${enumId}" text="${description}">
                                    <entity-find entity-name="moqui.basic.Enumeration">
                                        <econdition field-name="enumTypeId" value="Industry"/>
                                        <econdition field-name="enabled" value="Y"/>
                                    </entity-find>
                                </entity-options>
                            </drop-down>
                        </default-field>
                    </field>
                    <field name="serviceTypeEnumId">
                        <default-field title="服务类别">
                            <drop-down allow-empty="true" validate="required" validate-msg="服务类别为必填" >
                                <dynamic-options transition="getServiceType" value-field="enumId" label-field="description">
                                    <depends-on field="industryEnumId"/>
                                </dynamic-options>
                            </drop-down>
                        </default-field>
                    </field>
                    <field name="vendorPartyId">
                        <default-field title="服务提供商">
                            <drop-table placeholder="请选择服务提供商" value-field="pubName" search-field="searchField"
                                        key-field="id" transition="getVendorPartyDataJson"
                                        column="[{title:'id',data:'id'},{title:'服务提供商',data:'pubName'}]"
                                        page-size="20" pagination="true"
                                        validate="required" validate-msg="服务提供商为必填"/>
                        </default-field>
                    </field>
                    <field name="cooperationTypeEnumId">
                        <default-field title="合作类型">
                            <drop-down allow-empty="true" validate="required" validate-msg="合作类型为必填">
                                <entity-options key="${enumId}" text="${description}">
                                    <entity-find entity-name="moqui.basic.Enumeration">
                                        <econdition field-name="enumTypeId" value="CooperationType"/>
                                        <econdition field-name="enabled" value="Y"/>
                                    </entity-find>
                                </entity-options>
                            </drop-down>
                        </default-field>
                    </field>
                    <field name="businessTypeEnumId">
                        <default-field title="商业类型">
                            <drop-down allow-empty="true" validate="required" validate-msg="商业类型为必填">
                                <entity-options key="${enumId}" text="${description}">
                                    <entity-find entity-name="moqui.basic.Enumeration">
                                        <econdition field-name="enumTypeId" value="BusinessType"/>
                                        <econdition field-name="enabled" value="Y"/>
                                    </entity-find>
                                </entity-options>
                            </drop-down>
                        </default-field>
                    </field>
                    <field name="settlementMethodEnumId">
                        <default-field title="结算方式">
                            <drop-down allow-empty="true">
                                <entity-options key="${enumId}" text="${description}">
                                    <entity-find entity-name="moqui.basic.Enumeration">
                                        <econdition field-name="enumTypeId" value="SettlementMethod"/>
                                        <econdition field-name="enabled" value="Y"/>
                                    </entity-find>
                                </entity-options>
                            </drop-down>
                        </default-field>
                    </field>
                    <field name="settlementOrder">
                        <default-field title="结算报价">
                            <text-line maxlength="40"/>
                        </default-field>
                    </field>
                    <field name="marketingTypeEnumId">
                        <default-field title="营销类型">
                            <drop-down allow-empty="true"  >
                                <entity-options key="${enumId}" text="${description}">
                                    <entity-find entity-name="moqui.basic.Enumeration">
                                        <econdition field-name="enumTypeId" value="MarketingType"/>
                                        <econdition field-name="enabled" value="Y"/>
                                    </entity-find>
                                </entity-options>
                            </drop-down>
                        </default-field>
                    </field>
                    <field name="remark">
                        <default-field title="备注">
                            <text-line maxlength="40"/>
                        </default-field>
                    </field>
                    <field name="url">
                        <conditional-field title="服务url" condition="url">
                            <display/>
                        </conditional-field>
                        <default-field title="服务url">
                            <text-line />
                        </default-field>
                    </field>
                    <field name="appUrl">
                        <default-field title="默认下载链接">
                            <text-line />
                        </default-field>
                    </field>
                    <field name="appPackage">
                        <conditional-field title="App包名" condition="appPackage">
                            <display/>
                        </conditional-field>
                        <default-field title="App包名">
                            <text-line maxlength="100"/>
                        </default-field>
                    </field>
                    <field name="subButton">
                        <default-field title="保存">
                            <submit/>
                        </default-field>
                    </field>
                    <field-layout>
                        <field-row>
                            <field-ref name="subButton" colspan="6"/>
                        </field-row>
                        <field-ref name="pseudoId"/>
                        <field-ref name="name"/>
                        <field-ref name="industryEnumId"/>
                        <field-ref name="serviceTypeEnumId"/>
                        <field-ref name="vendorPartyId"/>
                        <field-ref name="cooperationTypeEnumId"/>
                        <field-ref name="businessTypeEnumId"/>
                        <field-ref name="settlementMethodEnumId"/>
                        <field-ref name="settlementOrder"/>
                        <field-ref name="marketingTypeEnumId"/>
                        <field-ref name="remark"/>
                        <field-ref name="serviceDataTypeEnumId"/>
                        <field-tabs id="type" type="card" default-pane="${serviceDataTypeEnumId?serviceDataTypeEnumId:'APP'}" size="small"
                                    set-field="serviceDataTypeEnumId">
                            <field-tab-pane label="APP" name="APP" condition="serviceDataTypeEnumId == 'APP'">
                                <field-ref name="appPackage"/>
                                <field-ref name="appUrl"/>
                            </field-tab-pane>
                            <field-tab-pane label="URL" name="URL" condition="serviceDataTypeEnumId == 'URL'">
                                <field-ref name="url"/>
                            </field-tab-pane>
                        </field-tabs>
                    </field-layout>
                </form-single>
            </row-col>
            <row-col lg="12">
                <container-box>
                    <box-header>
                        <label text="配置参数"/>
                    </box-header>
                    <box-body>
                        <container-row>
                            <row-col>
                                <container-dialog id="addDeliverableDialog" type="success" button-text="添加">
                                    <form-single name="ServiceIdSingle" submit-with-list="AddServiceParam"
                                                 transition="addServiceParamSubmit">
                                        <field name="serviceId">
                                            <default-field>
                                                <hidden/>
                                            </default-field>
                                        </field>
                                        <field name="subButton">
                                            <default-field title="保存">
                                                <submit/>
                                            </default-field>
                                        </field>
                                        <field-layout>
                                            <field-row>
                                                <field-ref name="subButton" colspan="1"/>
                                                <field-ref name="serviceId"/>
                                            </field-row>
                                        </field-layout>
                                    </form-single>
                                    <form-list name="AddServiceParam" list="serviceParam" use-widget="aggrid"
                                               dynamic="true" multi="true">
                                        <entity-find entity-name="moqui.basic.Enumeration">
                                            <econditions combine="and">
                                                <econdition field-name="enumTypeId" value="ConfigParam"/>
                                                <econdition field-name="enumId" from="_paramEnumIds" operator="not-in"/>
                                                <econdition field-name="enabled" value="Y"/>
                                            </econditions>
                                        </entity-find>
                                        <field name="tableIndex" from="serviceParam_index+1" show-checkbox="true">
                                            <default-field title="序号">
                                                <display/>
                                            </default-field>
                                        </field>
                                        <field name="enumId">
                                            <default-field>
                                                <hidden/>
                                            </default-field>
                                        </field>
                                        <field name="description">
                                            <header-field title="参数名称">
                                            </header-field>
                                            <default-field>
                                                <display/>
                                            </default-field>
                                        </field>
                                        <field name="enumCode">
                                            <header-field title="参数key">
                                            </header-field>
                                            <default-field>
                                                <display/>
                                            </default-field>
                                        </field>
                                        <field name="defaultValue">
                                            <header-field title="默认值">
                                            </header-field>
                                            <default-field>
                                                <text-line/>
                                            </default-field>
                                        </field>
                                    </form-list>
                                </container-dialog>
                            </row-col>
                        </container-row>
                        <form-list name="ServiceParam" list="paramApps" use-widget="aggrid">
                            <field name="serviceId">
                                <default-field>
                                    <hidden/>
                                </default-field>
                            </field>
                            <field name="configParamEnumId">
                                <default-field>
                                    <hidden/>
                                </default-field>
                            </field>
                            <field name="paramName">
                                <header-field title="参数名称">
                                </header-field>
                                <default-field>
                                    <display/>
                                </default-field>
                            </field>
                            <field name="enumCode">
                                <header-field title="参数key">
                                </header-field>
                                <default-field>
                                    <display/>
                                </default-field>
                            </field>
                            <field name="defaultValue">
                                <header-field title="默认值">
                                </header-field>
                                <default-field>
                                    <text-line/>
                                </default-field>
                            </field>
                            <field name="operationButton" is-action-column="true" width="100">
                                <header-field>
                                </header-field>
                                <default-field title="操作">
                                    <link url="updateDefaultValue" text="更新" btn-type="success" confirmation="确认更新吗？"
                                          display-condition-field="disableCondition"
                                          link-parameters="{'serviceId':'serviceId','configParamEnumId':'configParamEnumId','defaultValue':'defaultValue'}"/>
                                    <link url="deleteParam" text="删除"
                                          link-parameters="{'serviceId':'serviceId','configParamEnumId':'configParamEnumId'}"
                                          btn-type="danger" confirmation="确认删除吗？"
                                          display-condition-field="disableCondition"/>
                                </default-field>
                            </field>
                        </form-list>
                    </box-body>
                </container-box>
                <container-box>
                    <box-header>
                        <label text="区块配置"/>
                    </box-header>
                    <box-body>
                        <container-row>
                            <row-col>
                                <container-dialog id="addBlockDialog" type="success" button-text="添加">
                                    <form-single name="AddBlockSingle" submit-with-list="AddBlock"
                                                 transition="addBlockSubmit">
                                        <field name="serviceId">
                                            <default-field>
                                                <hidden/>
                                            </default-field>
                                        </field>
                                        <field name="subButton">
                                            <default-field title="保存">
                                                <submit/>
                                            </default-field>
                                        </field>
                                        <field-layout>
                                            <field-row>
                                                <field-ref name="subButton" colspan="1"/>
                                                <field-ref name="serviceId"/>
                                            </field-row>
                                        </field-layout>
                                    </form-single>
                                    <form-list name="AddBlock" use-widget="aggrid" list="addBlockList"
                                               dynamic="true" multi="true">
                                        <entity-find entity-name="mantle.mfexcel.h5page.PageBlockServiceApplView">
                                            <econditions combine="and">
                                                <econdition field-name="phaseStatusId" value="VtAlpha"/>
                                                <econdition field-name="blockId" from="_blockServiceIds" operator="not-in"/>
                                                <econdition field-name="blockId" from="_blockIds" operator="not-in"/>
                                                <econdition field-name="thruDate" operator="is-null"/>
                                            </econditions>
                                        </entity-find>
                                        <field name="blockId">
                                            <default-field>
                                                <hidden/>
                                            </default-field>
                                        </field>
                                        <field name="serviceIds">
                                            <default-field>
                                                <hidden/>
                                            </default-field>
                                        </field>
                                        <field name="tableIndex" from="addBlockList_index+1" show-checkbox="true">
                                            <default-field title="序号">
                                                <display/>
                                            </default-field>
                                        </field>
                                        <field name="name">
                                            <header-field title="区块名称">
                                            </header-field>
                                            <default-field>
                                                <display/>
                                            </default-field>
                                        </field>
                                        <field name="blockKey">
                                            <header-field title="区块唯一标识">
                                            </header-field>
                                            <default-field>
                                                <display/>
                                            </default-field>
                                        </field>
                                        <field name="serviceNames">
                                            <header-field title="区块服务">
                                            </header-field>
                                            <default-field>
                                                <display/>
                                            </default-field>
                                        </field>
                                    </form-list>
                                </container-dialog>
                            </row-col>
                        </container-row>
                        <form-list name="BlockList" list="blockList" use-widget="aggrid">
                            <field name="serviceId">
                                <default-field>
                                    <hidden/>
                                </default-field>
                            </field>
                            <field name="blockId">
                                <default-field>
                                    <hidden/>
                                </default-field>
                            </field>
                            <field name="blockName">
                                <header-field title="区块名称">
                                </header-field>
                                <default-field>
                                    <display/>
                                </default-field>
                            </field>
                            <field name="blockKey">
                                <header-field title="区块唯一标识">
                                </header-field>
                                <default-field>
                                    <display/>
                                </default-field>
                            </field>
                            <field name="serviceNames">
                                <header-field title="区块服务">
                                </header-field>
                                <default-field>
                                    <display/>
                                </default-field>
                            </field>
                            <field name="operationButton" is-action-column="true" width="100">
                                <header-field>
                                </header-field>
                                <default-field title="操作">
                                    <link url="deleteBlock" text="删除"
                                          link-parameters="{'serviceId':'serviceId','blockId':'blockId'}"
                                          btn-type="danger" confirmation="确认删除吗？"
                                          display-condition-field="disableCondition"/>
                                </default-field>
                            </field>
                        </form-list>
                    </box-body>
                </container-box>
            </row-col>
        </container-row>
    </widgets>
</screen>
